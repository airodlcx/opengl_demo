#include <iostream>
#include <opencv2/core.hpp>
#include <opencv2/opencv.hpp>
#include <opencv2/highgui.hpp>

using namespace std;
using namespace cv;


int main(){
	namedWindow("[demo]",WINDOW_AUTOSIZE);

	VideoCapture vc(0);

	Mat frame;

	bool stop = false;

	while(!stop){
		vc>>frame;

		imshow("[demo]",frame);

		if(((char)waitKey(1))==q){
			stop = true;
		}
	}
}




